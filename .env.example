# AgentOps Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# SUPABASE CONFIGURATION (Required)
# ============================================================================
# Get these from: https://supabase.com → Your Project → Settings → API

# Supabase Project URL (e.g., https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key for client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (secret key for server-side)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Project ID (from URL subdomain or Settings → General)
SUPABASE_PROJECT_ID=your-project-id

# ============================================================================
# SUPABASE DATABASE CONNECTION (Required for API)
# ============================================================================
# Get these from: Supabase → Settings → Database → Connection Info

# Database host (e.g., db.xxxxx.supabase.co)
SUPABASE_HOST=db.your-project-id.supabase.co

# Database port (usually 5432)
SUPABASE_PORT=5432

# Database name (usually 'postgres')
SUPABASE_DATABASE=postgres

# Database user (usually postgres.your-project-id)
SUPABASE_USER=postgres.your-project-id

# Database password
SUPABASE_PASSWORD=your-database-password

# Connection pool settings
SUPABASE_MAX_POOL_SIZE=10
SUPABASE_SSLMODE=require

# ============================================================================
# CLICKHOUSE CONFIGURATION (Required)
# ============================================================================
# Get these from: https://clickhouse.com/cloud → Your Service → Connect

# ClickHouse host (e.g., your-service.region.clickhouse.cloud)
CLICKHOUSE_HOST=your-clickhouse-host.clickhouse.cloud

# ClickHouse port (8443 for cloud, 8123 for local)
CLICKHOUSE_PORT=8443

# ClickHouse user (usually 'default')
CLICKHOUSE_USER=default

# ClickHouse password
CLICKHOUSE_PASSWORD=your-clickhouse-password

# ClickHouse database name
CLICKHOUSE_DATABASE=otel_2

# Use secure connection (true for cloud, false for local)
CLICKHOUSE_SECURE=true

# ClickHouse endpoint (for OTLP collector)
CLICKHOUSE_ENDPOINT=https://your-clickhouse-host.clickhouse.cloud:8443

# ClickHouse username (usually same as CLICKHOUSE_USER)
CLICKHOUSE_USERNAME=default

# ============================================================================
# APPLICATION URLS (Required)
# ============================================================================

# Protocol (http for local, https for production)
PROTOCOL=http

# API domain (without protocol)
API_DOMAIN=localhost:8000

# App domain (without protocol)
APP_DOMAIN=localhost:3000

# Full app URL
APP_URL=http://localhost:3000

# Public API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Public site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================================================
# AUTHENTICATION (Required)
# ============================================================================

# JWT secret key (generate a long random string)
# You can generate one with: openssl rand -hex 32
JWT_SECRET_KEY=your-long-random-secret-key-here

# ============================================================================
# APPLICATION CONFIGURATION (Optional)
# ============================================================================

# Environment type (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT_TYPE=development

# Enable playground features
NEXT_PUBLIC_PLAYGROUND=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOGGING_LEVEL=INFO

# Sign-in methods (comma-separated: email,google,github)
NEXT_PUBLIC_SIGNIN_METHODS=email

# Fallback API key for testing
NEXT_PUBLIC_FALLBACK_API_KEY=

# ============================================================================
# SUPABASE S3 STORAGE (Optional)
# ============================================================================

# S3 bucket for general storage
SUPABASE_S3_BUCKET=

# S3 bucket for logs
SUPABASE_S3_LOGS_BUCKET=

# S3 access key
SUPABASE_S3_ACCESS_KEY_ID=

# S3 secret key
SUPABASE_S3_SECRET_ACCESS_KEY=

# ============================================================================
# STRIPE CONFIGURATION (Optional - for billing)
# ============================================================================

# Stripe publishable key (starts with pk_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Stripe secret key (starts with sk_)
NEXT_STRIPE_SECRET_KEY=

# Stripe webhook secret (starts with whsec_)
NEXT_STRIPE_WEBHOOK_SECRET=

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_ORG=
NEXT_PUBLIC_SENTRY_PROJECT=

# PostHog for analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

